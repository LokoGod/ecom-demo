generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Inventory Begin
model Product {
  id                 Int               @id @default(autoincrement())
  productTitle       String
  productDescription String
  prodcutPrice       Float
  productType        ProductType       @relation(fields: [productTypeId], references: [id])
  productTypeId      Int
  productCategory    ProdcutCategory   @relation(fields: [prodcutCategoryId], references: [id])
  prodcutCategoryId  Int
  inventoryRecord    InventoryRecord[]
}

model InventoryRecord {
  id                Int     @id @default(autoincrement())
  recRelatedProduct Product @relation(fields: [productId], references: [id])
  productId         Int
  quantity          Int
}

model ProductType {
  id                 Int       @id @default(autoincrement())
  productTypeName    String
  typeRelatedProduct Product[]
}

model ProdcutCategory {
  id                     Int       @id @default(autoincrement())
  productCategoryName    String
  categoryRelatedProduct Product[]
}

model Size {
  id        Int    @id @default(autoincrement())
  sizeName  String
  sizeValue Float
}

model Colors {
  id        Int    @id @default(autoincrement())
  colorName String
  hexCode   Int
}

// Order Begin
model Order {
  id Int @id @default(autoincrement())
}

// User Begin
model User {
  id Int @id @default(autoincrement())
}
